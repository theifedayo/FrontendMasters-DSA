{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": { 
      "*": [
        "node_modules/*",
        "dist/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "**/*"
  ]
}